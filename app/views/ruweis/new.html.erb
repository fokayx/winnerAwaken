<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 ruwei5x">
    <%= image_tag("5xRuWei.png", class: 'img5xText') %>

    <%= simple_form_for(@ruwei) do |f| %>
      <%= f.input :name, placeholder: "Name", label: false, input_html: {autocomplete: 'off', class: "inputRuwei"} %>
      <%= f.input :email, placeholder: "Email", label: false, input_html: {autocomplete: 'off', class: "inputRuwei"} %>
      <%= f.button :submit, '溫拿覺醒', class:"awakenButton" %>
    <% end %>

    <div class="light5x-item">
      <%= image_tag("5xLogo.png", class: 'img5xLogo') %>
      <div class="lightsaber">
        <label for="darth-vader-left" class="label-left"></label>
        <input type="checkbox" id="darth-vader-left">
        <div class="switch switch-left"></div>
        <div class="plasma vader plasma-left"></div>
        </div>
        <div class="lightsaber">
        <label for="darth-vader-right"></label>
        <input type="checkbox" id="darth-vader-right">
        <div class="switch"></div>
        <div class="plasma vader plasma-right"></div>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(".awakenButton").click(function(){
     document.getElementById("darth-vader-left").checked = true;
     document.getElementById("darth-vader-right").checked = true;
  });
</script>
